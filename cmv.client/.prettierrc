{
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "css",
    "bracketSameLine": false,
    "overrides": [
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular"
            }
        }
    ]
}